<MenuBar>
	<Menu name="System Preferences">
		<Menu name="About System Preferences" shell="win -a"/>
		<Menu type="divider"/>
		<Menu name="Quit System Preferences" shell="win -c"/>
	</Menu>
	<Menu name="View">
		<Menu name="Basic" click="view-basic" check-group="view-option" is-checked="1"/>
		<Menu name="Scientific" click="view-scientific" check-group="view-option"/>
	</Menu>
	<Menu name="Help">
		<Menu name="Send System Preferences Feedback"/>
		<Menu type="divider"/>
		<Menu name="System Preferences Help"/>
		<Menu type="divider"/>
		<Menu name="License"/>
	</Menu>
</MenuBar>